# ==================================================
# ANCHORVIEW - ENVIRONMENT VARIABLES
# ==================================================
# Copy this file to .env and fill in the values
# NEVER commit .env to git

# ==================================================
# DATABASE
# ==================================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://user:password@localhost:5432/anchorview"

# Docker PostgreSQL (if using docker-compose)
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=anchorview

# ==================================================
# AUTHENTICATION & SECURITY
# ==================================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
SESSION_SECRET="your-super-secret-session-key-change-this-too"

# ==================================================
# APPLICATION
# ==================================================
NEXT_PUBLIC_BASE_URL="http://localhost:9002"
# Production: https://your-domain.com

NODE_ENV=development
# Values: development | production | test

# ==================================================
# EMAIL NOTIFICATIONS (SMTP) - **NEW**
# ==================================================
# Email service configuration for notifications
# Leave empty to disable email notifications
SMTP_HOST=smtp.gmail.com
# Gmail: smtp.gmail.com | Outlook: smtp-mail.outlook.com
# SendGrid: smtp.sendgrid.net | Mailgun: smtp.mailgun.org

SMTP_PORT=587
# 587 for TLS, 465 for SSL

SMTP_SECURE=false
# true for port 465, false for other ports

SMTP_USER=your-email@gmail.com
# Your email address

SMTP_PASSWORD=your-app-password
# For Gmail: Use App Password (not regular password)
# Generate at: https://myaccount.google.com/apppasswords

SMTP_FROM="AnchorView <noreply@anchorview.com>"
# Email sender display name and address

# ==================================================
# AI / GENKIT
# ==================================================
GEMINI_API_KEY="YOUR_GEMINI_API_KEY_HERE"
# Get API key at: https://aistudio.google.com/app/apikey

GOOGLE_GENAI_API_KEY="YOUR_GEMINI_API_KEY_HERE"
# Same as GEMINI_API_KEY (some configs use this)

# ==================================================
# PAYMENT (MERCADOPAGO) - **NEW**
# ==================================================
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-access-token
# Get at: https://www.mercadopago.com.br/developers

MERCADOPAGO_PUBLIC_KEY=your-mercadopago-public-key
# Public key for frontend integration

MERCADOPAGO_WEBHOOK_SECRET=your-webhook-secret
# For webhook verification

# ==================================================
# STORAGE & UPLOADS - **NEW**
# ==================================================
MAX_FILE_SIZE_MB=50
# Maximum file upload size in MB

UPLOAD_DIR=./uploads
# Directory for file uploads

# ==================================================
# BACKUP CONFIGURATION - **NEW**
# ==================================================
BACKUP_ENABLED=true
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# ==================================================
# PWA & MOBILE - **NEW**
# ==================================================
NEXT_PUBLIC_PWA_ENABLED=true

# ==================================================
# DEVELOPMENT ONLY
# ==================================================
DEBUG=false
NEXT_TELEMETRY_DISABLED=1

# ==================================================
# SETUP INSTRUCTIONS
# ==================================================
# 1. For Gmail SMTP:
#    - Enable 2-factor authentication
#    - Generate App Password: https://myaccount.google.com/apppasswords
#    - Use App Password as SMTP_PASSWORD
#
# 2. For production:
#    - Change all SECRET values to random strings
#    - Use strong DATABASE_URL password
#    - Set NODE_ENV=production
#
# 3. Required variables (minimum):
#    - DATABASE_URL
#    - JWT_SECRET
#    - SESSION_SECRET
#
# 4. Optional but recommended:
#    - SMTP_* (for email notifications)
#    - GEMINI_API_KEY (for AI features)
#    - MERCADOPAGO_* (for payments)
